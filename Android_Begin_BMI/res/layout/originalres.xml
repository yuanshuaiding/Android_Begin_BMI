<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OriginalResTest" >

    <Button
        android:id="@+id/btn_play1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放res下的音乐" />

    <Button
        android:id="@+id/btn_play2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放assets下的音乐" />

    <Button
        android:id="@+id/btn_nextImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一张张查看assets里的全部图片" />

    <ImageView
        android:id="@+id/img_asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@null" />

</LinearLayout>